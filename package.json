{
  "name": "smart-deadlines",
  "version": "1.0.0",
  "description": "SmartDeadlines - On-chain accountability escrow for group tasks",
  "scripts": {
    "setup": "chmod +x scripts/*.sh && ./scripts/setup-env.sh",
    "deploy:local": "./scripts/test-local.sh",
    "deploy:devnet": "./scripts/deploy.sh devnet",
    "deploy:testnet": "./scripts/deploy.sh testnet",
    "create-usdc": "./scripts/create-usdc-mint.sh devnet",
    "test": "anchor test",
    "build": "anchor build",
    "install:all": "npm install && cd app && npm install && cd ../backend && npm install",
    "dev:app": "cd app && npm run dev",
    "dev:backend": "cd backend && npm run dev",
    "start:backend": "cd backend && npm start"
  },
  "keywords": [
    "solana",
    "blockchain",
    "anchor",
    "smart-contracts",
    "accountability",
    "escrow"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@coral-xyz/anchor": "^0.29.0",
    "@solana/spl-token": "^0.3.9",
    "@solana/web3.js": "^1.87.6",
    "@types/bn.js": "^5.1.0",
    "@types/chai": "^4.3.0",
    "@types/mocha": "^9.0.0",
    "chai": "^4.3.4",
    "mocha": "^9.0.3",
    "ts-mocha": "^10.0.0",
    "typescript": "^4.3.5"
  }
}
